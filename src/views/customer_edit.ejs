        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post"> 
                        <!--Input -->
                        <div class="form-group mb-2" >
                            <input type="text" name="name" value="<%= data.name %>" class="form-control" autocomplete="off">
                        </div>
